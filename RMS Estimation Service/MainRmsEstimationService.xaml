                                        IsToggleButton="True"
                                        TitleHeader="Design Graphics" />

                                </StackPanel>

                            </controls:SimajeScrollBarViewer>
                        </Border>
                    </Border>

                </Grid>

                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="10,0,0,0"
                    Background="#EEEEEE">
                    <controls:SimajeScrollBarViewer Margin="0,0,10,0">
                        <!--
                            HoverBrush="#5454E0"
                            PressedBrush="Blue"
                            StandardBrush="#2D2DE5"
                        -->
                        <WrapPanel
                            x:Name="ContainerBottom"
                            Margin="16,16,0,0"
                            Orientation="Horizontal">
                            <StackPanel Width="215" Height="260">
                                <Border
                                    Margin="10,5,10,0"
                                    BorderBrush="#D9D9D9"
                                    BorderThickness="1">
                                    <StackPanel Height="140" Background="White">
                                        <TextBlock
                                            Padding="0,18"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="#575757"
                                            Text="Presentation Design"
                                            TextAlignment="Center" />
                                        <TextBlock
                                            Padding="5,2"
                                            FontSize="12"
                                            Foreground="#7E7E7E"
                                            Text="PPT/GRID: Key slides, creative designs, slide edits/formatting and animation"
                                            TextAlignment="Center"
                                            TextWrapping="WrapWithOverflow" />
                                    </StackPanel>
                                </Border>
                                <StackPanel Margin="10,5,10,0">
                                    <controls:SimajeTextBoxWatermark
                                        Height="30"
                                        Margin="0,0,0,5"
                                        Padding="7"
                                        Foreground="#575757"
                                        Placeholder="Estimation"
                                        Text="Estimation"
                                        TextAlignment="Center" />

                                    <telerik:RadNumericUpDown
                                        Height="30"
                                        Margin="0,0,0,5"
                                        Padding="7"
                                        telerik:StyleManager.Theme="VisualStudio2019"
                                        Background="Transparent"
                                        BorderBrush="#BDBDBD"
                                        BorderThickness="1"
                                        Foreground="#575757"
                                        Maximum="1000"
                                        Minimum="1" />
                                    <controls:SimajeCircleButton
                                        x:Name="BtnValidation"
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,0,3"
                                        HorizontalAlignment="Right"
                                        Background="#FDFDFD"
                                        BorderBrush="#E4E4E4"
                                        BorderThickness="1"
                                        Foreground="#FFF0862F"
                                        IconName="check"
                                        IconSize="16"
                                        ToolTipAnimation="Fade"
                                        ToolTipPlacementMode="Top"
                                        ToolTipText="Valider" />

                                </StackPanel>
                            </StackPanel>
                        </WrapPanel>
                    </controls:SimajeScrollBarViewer>
                </Border>

                <Canvas
                    x:Name="CanvasQuoteContainer"
                    Grid.Row="2"
                    Grid.Column="0"
                    Background="#F4F4F4">
                    <TextBlock
                        x:Name="TxtBlockQuotes"
                        Padding="3"
                        Background="Transparent"
                        FontSize="11"
                        Foreground="#575757"
                        Text="There is always a reason to 'SMILE'" />
                </Canvas>
            </Grid>

            <!--  #FFF0862F"  -->
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="0"
                Background="#BEBEBE">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <controls:SimajeCircleButton
                    x:Name="BtnClearAll"
                    Grid.Row="0"
                    Width="32"
                    Height="32"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#FDFDFD"
                    BorderBrush="#E4E4E4"
                    BorderThickness="1"
                    Click="BtnClearAll_Click"
                    Foreground="#FFF0862F"
                    IconName="trash"
                    IconSize="14"
                    OpacityShadow="0"
                    ToolTipAnimation="Fade"
                    ToolTipPlacementMode="Top"
                    ToolTipText="Clear all" />
                <Border
                    x:Name="BorderContainerDataLog"
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    Padding="0,10,0,5"
                    BorderThickness="0">
                    <!--  FFF0862F  -->
                    <controls:SimajeScrollBarViewer
                        x:Name="ScrollViewerLog"
                        Margin="0,0,5,0"
                        HoverBrush="Azure"
                        PressedBrush="White"
                        StandardBrush="AliceBlue"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="StackPanelContentLogs" Margin="0,0,-10,0">
                            <!--  ="StackPanelContentLogs_LayoutUpdated"  -->
                            <Border
                                x:Name="BorderDataLog"
                                Margin="0,0,0,0"
                                Padding="0,0,0,5"
                                BorderBrush="White"
                                BorderThickness="0,0,0,1">
                                <Grid x:Name="GridDataLog">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="260" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Border
                                            Margin="10,4,10,4"
                                            Padding="4"
                                            Background="#F1F1F1"
                                            BorderBrush="#F1F1F1"
                                            BorderThickness="1">
                                            <TextBox
                                                x:Name="TxtBlockCategoryService"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#575757"
                                                IsReadOnly="True"
                                                Text="Service Category" />
                                        </Border>
                                        <Border
                                            Margin="10,4,10,4"
                                            Padding="4"
                                            Background="#F1F1F1"
                                            BorderBrush="#F1F1F1"
                                            BorderThickness="1">
                                            <TextBox
                                                x:Name="TxtBlockTypeService"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#575757"
                                                IsReadOnly="True"
                                                Text="Service Type" />
                                        </Border>

                                        <Grid Margin="10,4,10,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Margin="0,0,8,0"
                                                Padding="4"
                                                Background="#F1F1F1"
                                                BorderBrush="#F1F1F1"
                                                BorderThickness="1">
                                                <TextBox
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#575757"
                                                    IsReadOnly="True"
                                                    Text="Estimation" />
                                            </Border>
                                            <Border
                                                Grid.Column="1"
                                                Padding="4"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="#F1F1F1"
                                                BorderBrush="#F1F1F1"
                                                BorderThickness="1">
                                                <TextBox
                                                    x:Name="TxtEstimation"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#575757"
                                                    IsReadOnly="True"
                                                    Text="01:00"
                                                    TextAlignment="Right" />
                                            </Border>
                                        </Grid>

                                        <Grid Margin="10,4,10,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Margin="0,0,8,0"
                                                Padding="4"
                                                Background="#F1F1F1"
                                                BorderBrush="#F1F1F1"
                                                BorderThickness="1">
                                                <TextBox
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#575757"
                                                    IsReadOnly="True"
                                                    Text="Number of slides" />
                                            </Border>
                                            <Border
                                                Grid.Column="1"
                                                Padding="4"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="#F1F1F1"
                                                BorderBrush="#F1F1F1"
                                                BorderThickness="1">
                                                <TextBox
                                                    x:Name="TxtNbrSlide"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#575757"
                                                    IsReadOnly="True"
                                                    Text="3"
                                                    TextAlignment="Right" />
                                            </Border>
                                        </Grid>

                                        <Grid Margin="10,4,10,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Margin="0,0,8,0"
                                                Padding="4"
                                                Background="#F1F1F1"
                                                BorderBrush="#F1F1F1"
                                                BorderThickness="1">
                                                <TextBox
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#575757"
                                                    IsReadOnly="True"
                                                    Text="Result" />
                                            </Border>
                                            <Border
                                                Grid.Column="1"
                                                Padding="4"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="#F1F1F1"
                                                BorderBrush="#F1F1F1"
                                                BorderThickness="1">
                                                <TextBox
                                                    x:Name="TxtResult"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#575757"
                                                    IsReadOnly="True"
                                                    Text="03:00"
                                                    TextAlignment="Right" />
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                    <controls:SimajeCircleButton
                                        x:Name="BtnCloseLog"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="20"
                                        Height="20"
                                        Margin="0,5,30,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderBrush="#E4E4E4"
                                        BorderThickness="1"
                                        Foreground="#E4E4E4"
                                        IconName="times"
                                        IconSize="14"
                                        OpacityShadow="0"
                                        ToolTipAnimation="Fade"
                                        ToolTipPlacementMode="Top"
                                        ToolTipText="CLear" />
                                </Grid>
                            </Border>

                        </StackPanel>
                    </controls:SimajeScrollBarViewer>
                </Border>

                <Border
                    x:Name="BorderContentBottomTotal"
                    Grid.Row="2"
                    Background="#7E7E7E"
                    BorderBrush="#7E7E7E"
                    BorderThickness="0,1,0,0">
                    <Grid Height="24" Margin="10,4,10,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Margin="0,0,8,0"
                            Padding="4"
                            Background="#F1F1F1"
                            BorderBrush="#F1F1F1"
                            BorderThickness="1">
                            <TextBox
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#575757"
                                IsReadOnly="True"
                                Text="Total" />
                        </Border>
                        <Border
                            Grid.Column="1"
                            Margin="0,0,8,0"
                            Padding="4"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="#F1F1F1"
                            BorderBrush="#F1F1F1"
                            BorderThickness="1">
                            <TextBox
                                x:Name="TxtTotalEstimation"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#575757"
                                IsReadOnly="True"
                                Text="0"
                                TextAlignment="Right" />
                        </Border>
                        <Border
                            Grid.Column="2"
                            Padding="4"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="#F1F1F1"
                            BorderBrush="#F1F1F1"
                            BorderThickness="1">
                            <TextBox
                                x:Name="TxtDuration"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#575757"
                                IsReadOnly="True"
                                Text="00:00"
                                TextAlignment="Right" />
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
