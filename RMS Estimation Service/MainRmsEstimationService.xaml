<Window
    x:Class="RMS_Estimation_Service.MainRmsEstimationService"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ControlsObjects="clr-namespace:RMS_Estimation_Service.ControlsObjects"
    xmlns:controls="clr-namespace:SimajeEmeakomLib.Controls;assembly=SimajeEmeakomLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    x:Name="RmsEstimationService1"
    Title="RMS Estimation Service"
    Width="1230"
    Height="720"
    FontFamily="Trebuchet MS (Body)"
    FontSize="12"
    Loaded="RmsEstimationService1_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d" Closed="RmsEstimationService1_Closed">
    <Border BorderBrush="#7E7E7E" BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="290" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid
                x:Name="GridTitleBar"
                Grid.ColumnSpan="2"
                Background="#BEBEBE"
                MouseDown="GridTitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="290" />
                </Grid.ColumnDefinitions>
                <Grid Background="White" >
                </Grid>
                <controls:SimajeCircleButton
                    x:Name="BtnClose"
                    Grid.Column="1"
                    Width="18"
                    Height="18"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Background="#FDFDFD"
                    BorderBrush="#E4E4E4"
                    BorderThickness="1"
                    Click="BtnClose_Click"
                    Foreground="#FFF0862F"
                    IconName="times"
                    IconSize="12"
                    OpacityShadow="0"
                    ToolTipAnimation="Fade"
                    ToolTipPlacementMode="Top"
                    ToolTipText="Close" />
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="40,5,5,5"
                        HorizontalAlignment="Left"
                        Source="Images/rms_logo.png" />

                    <controls:SimajeCircleButton
                        x:Name="BtnSettings"
                        Grid.Row="0"
                        Width="32"
                        Height="32"
                        Margin="0,-20,10,0"
                        HorizontalAlignment="Right"
                        Background="#EE842F"
                        BorderBrush="#E4E4E4"
                        BorderThickness="1"
                        Click="BtnSettings_Click"
                        Foreground="White"
                        IconName="cog"
                        IconSize="16"
                        OpacityShadow="0"
                        ToolTipAnimation="Fade"
                        ToolTipPlacementMode="Top"
                        ToolTipText="Settings" />

                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Padding="10">
                        <Border
                            x:Name="BorderCategories"
                            BorderBrush="#BEBEBE"
                            BorderThickness="1,0,1,0">
                            <controls:SimajeScrollBarViewer
                                x:Name="ScrollViewerLog1"
                                Margin="0,0,0,0"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Hidden">

                                <StackPanel
                                    x:Name="SpCategories"
                                    Margin="16,16,8,16"
                                    Orientation="Horizontal">
                                    <controls:SimajeButtonFeature
                                        Width="215"
                                        Height="231"
                                        Margin="8,0,8,0"
                                        Description="From logos to campaigns and brochures, we create distinct visual identities and communications "
